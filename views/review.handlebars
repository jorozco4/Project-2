<div class="container">
  <div id="box1">
    <h4 id="shoe-name">{{name}}</h4>
  </div>
  <div id="shoeinfo">
    <div id="box2">
      <div id="shoe-img"></div>
      <div id="shoe-btn">
        <a href="#" id="back" class="previous round">&#8249;</a>
        <a href="#" id="forward" class="next round">&#8250;</a>
      </div>
    </div>
    <div id="details">
      <h4 id="listname">Details</h4>
      <ul id="list">
        <li id="relDate"></li>
        <li id="retailPrice"></li>
        <li id="colorway"></li>
        <li id="styleID"></li>
        <li id="amazon"></li>
      </ul>
    </div>
  </div>    
  <br>
  <h4>Sumbit Review</h4>
  <div id="box3">
    {{#if loggedIn}}
      <form class="newReview">
        <div class="star-rating"><s><s><s><s><s></s></s></s></s></s></div>
        <div class="form-group">
          <input class="form-control" id="review_title" name="review_title" rows="1" placeholder="Title" required></input>
          <br>
          <input class="form-control" id="review" name="review" placeholder="Review" required></input>
          <button type="submit" class="btn submitbtn btn-primary">Submit Review</button> 
        </div>
      </form>
  </div>
  {{else}}
    <h3><a class="links" href="/login">Login</a> or <a class="links" href="/sign-up">Sign-up</a> to Submit a Review!</h3>
  {{/if}}
  <br>
  <h4>User Reviews</h4>
  <div class="review-card">
    {{#each product.reviews as |product_review|}}
      <section class="each-card">
        <div id="card-top">
          <header id="review-title">{{review_title}}</header>
          <p id="review-user">User: {{user.username}}</p>
        </div>
        <div class="card-review">
          <p id="review-content">{{review}}</p>
          <p id="review-rating">Rating: {{rating}} Star</p>
        </div>
      </section>
    {{/each}}
  </div>
</div>

<script src="/js/review.js"></script>