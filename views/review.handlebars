<div class="box-wrapper">
        <div id="box1">
            <h4 id="shoe-name">{{name}}</h4>
        </div>  
        <div id="box3">
            <div id="shoe-img"></div>
        </div>
           <div id="box4">
                <h4>Review</h4>
                  <form class="newReview">
                    <div class="rate" id="stars">                      
                      <input class="stars" type="radio" id="star5" name="rating" value="5" />
                      <label for="star5" title="5 stars"></label>
                      <input href="#" class="stars" type="radio" id="star4" name="rating" value="4" />
                      <label for="star4" title="4 stars"></label>
                      <input  href="#" class="stars" type="radio" id="star3" name="rating" value="3" />
                      <label for="star3" title="3 stars"></label>
                      <input href="#" class="stars" type="radio" id="star2" name="rating" value="2" />
                      <label for="star2" title="2 stars"></label>
                      <input  href="#" class="stars" type="radio" id="star1" name="rating" value="1" />
                      <label for="star1" title="1 star"></label>
                    </div>
                    <div class="form-group">
                      <input class="form-control" id="review_title" name="review_title" rows="1" placeholder="Title" required></input>
                      <br>
                      <input class="form-control" id="review" name="review" placeholder="Review" required></input>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit Review</button> 
                  </form>
                <br>
                <h4>User Reviews</h4>
                <div class="container" id="pullReviews">
                  {{#each product.reviews as |product_review|}}
                  <section class="card">
                    <header>{{review_title}}</header>
                    <div class="card-body">
                      <p>{{review}}</p>
                      <p>By:{{user.username}}</p>
                    </div>
                  </section>
                  {{/each}}
                </div>
            </div>
            <div id="details">
                <h5>Details</h5>
                <ul id="list">
                  <li id="relDate"></li>
                  <li id="retailPrice"></li>
                  <li id="styleID"></li>
                </ul>
            </div>
</div>
    

